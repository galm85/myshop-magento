<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>



        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">product</argument>
                <argument name="add_base_attribute" xsi:type="string">itemprop="name"</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="product.info.main">
            <block name="myshop.product.title" template="Magento_Catalog::title.phtml" class="Magento\Theme\Block\Html\Title" before="-"/>
            <block name="custom.product.view" template="Magento_Catalog::product/view.phtml" after="myshop.product.title"/>
        </referenceContainer>
    </body>



<!--    <referenceContainer name="product.info.main" display="false"/>-->
        <referenceBlock name="page.main.title" display="false"/>
</page>
